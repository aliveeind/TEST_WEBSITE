import React from 'react';
import './App.css'; // Importing the CSS file for styling

function App() {

  // A simple function to handle button clicks
  const handleSelection = (option) => {
    alert(`You clicked on: ${option}`);
  };

  return (
    <div className="app-container">
      <div className="card">
        {/* The Greeting */}
        <h1>Hello GM!</h1>
        
        {/* The Message */}
        <p>You have successfully entered the website. What would you wish to do?</p>
        
        {/* The Options */}
        <div className="button-group">
          <button onClick={() => handleSelection('Login')} className="btn login-btn">
            Login
          </button>
          
          <button onClick={() => handleSelection('Shop')} className="btn shop-btn">
            Shop
          </button>
          
          <button onClick={() => handleSelection('Cart')} className="btn cart-btn">
            Cart
          </button>
        </div>
      </div>
    </div>
  );
}

export default App;